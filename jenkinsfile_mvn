pipeline {
    agent any
    stages {
        stage ('Initialize M2_HOME'){
            steps{
                env.M2_HOME = '/Applications/apache-maven-3.6.0/bin'
            }
        }
        
        stage ('Build Servlet Project'){
            
            steps {
                sh 'mvn clean package'
            }

            post {
                success {
                    echo 'Now Archiving ...'
                    archiveArtifacts artifacts : '**/*.war'
                }
            }
        }
    }
}