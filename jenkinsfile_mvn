pipeline {
    agent any
    environment {
        M2_HOME = '/Applications/apache-maven-3.6.0/bin'
    }
    stages {
        stage ('Build Servlet Project'){
            
            steps {
                echo '${M2_HOME}'
                sh 'mvn clean package'
            }

            post {
                success {
                    echo 'Now Archiving ...'
                    archiveArtifacts artifacts : '**/*.war'
                }
            }
        }
    }
}