pipeline {
    agent any
    stages {
       stage ('Build Servlet Project') {
           steps {
                withEnv(["PATH+M2_HOME=/Applications/apache-maven-3.6.0/bin"]){
                    sh 'mvn clean pack'
                }
           }
            post {
                success {
                    echo 'Now Archiving ...'
                    archiveArtifacts artifacts : '**/*.war'
                }
            }
        }
    }
}